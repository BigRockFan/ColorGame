<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#5f5f5f">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box6"
        android:background="#0000ff"
        android:layout_marginTop="107dp"
        android:layout_below="@+id/box1"
        android:layout_alignStart="@+id/box1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box2"
        android:background="#ff0000"
        android:layout_alignBaseline="@+id/box1"
        android:layout_alignBottom="@+id/box1"
        android:layout_alignEnd="@+id/chooseColor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box1"
        android:background="#00ff00"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/chooseColor"
        android:layout_alignStart="@+id/chooseColor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box4"
        android:background="#ffff00"
        android:layout_alignBaseline="@+id/box6"
        android:layout_alignBottom="@+id/box6"
        android:layout_alignStart="@+id/box2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hand"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/box4"
        android:layout_alignStart="@+id/box4" />

    <TextView
        android:text="Choose the yellow one:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chooseColor"
        android:textSize="30sp"
        android:textColor="#d2d2d2"
        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
