<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#5f5f5f">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box2"
        android:background="#ff0000"
        android:layout_alignBaseline="@+id/box1"
        android:layout_alignBottom="@+id/box1"
        android:layout_alignEnd="@+id/chooseColor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box6"
        android:background="#ff8300"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/box4"
        android:layout_alignStart="@+id/box4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box5"
        android:background="#ff30e0"
        android:layout_alignBaseline="@+id/box6"
        android:layout_alignBottom="@+id/box6"
        android:layout_alignStart="@+id/box3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box1"
        android:background="#00ff00"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/chooseColor"
        android:layout_alignStart="@+id/chooseColor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box3"
        android:background="#0000ff"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/box1"
        android:layout_alignStart="@+id/box1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box4"
        android:background="#ffff00"
        android:layout_alignBaseline="@+id/box3"
        android:layout_alignBottom="@+id/box3"
        android:layout_alignStart="@+id/box2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/box7"
        android:background="#00fffa"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/box5"
        android:layout_alignStart="@+id/box5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/black2"
        android:background="#000000"
        android:layout_alignBaseline="@+id/box7"
        android:layout_alignBottom="@+id/box7"
        android:layout_alignStart="@+id/box6" />

    <ImageView
        android:layout_width="100sp"
        android:layout_height="60sp"
        app:srcCompat="@drawable/hand4"
        android:id="@+id/imageView3"
        android:layout_above="@+id/box7"
        android:layout_toStartOf="@+id/box6"
        android:layout_toEndOf="@id/box5" />

    <TextView
        android:text="Choose the orange one:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chooseColor"
        android:textSize="30sp"
        android:textColor="#d2d2d2"
        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
